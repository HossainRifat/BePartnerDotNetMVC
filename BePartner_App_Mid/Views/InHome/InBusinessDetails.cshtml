
@{
    Layout = "~/Views/Shared/_In_Layout.cshtml";
}
<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- All CSS -->
    <link rel="stylesheet" href="~/Incss/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Incss/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/Incss/css/themify-icons.css">
    <link rel="stylesheet" href="~/Incss/css/style.css">

    <title>Hey, world!</title>
</head>
<body>

    <!-- Banner section start -->
    <section class="banner">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6 order-1 order-md-0">
                    <div class="content-box">
                        <span class="tagline"><br>@Model.Company_Name</span>
                        @Model.Category
                        <h2>@Model.Moto</h2>
                        <p>@Model.Description</p>
                        <a href="#" class="btn btn-default">Visit Us</a>
                        <button onclick="openchatForm()" class="btn btn-default">Send Message</button>
                    </div>
                </div>
                <div class="col-md-6 order-0 order-md-1">
                    <figure class="ban-img">
                        <img src="~/Img/@(Model.Img)" alt="" height="500" width="500" style="border-radius:30px; border:solid;">
                    </figure>
                </div>
            </div>
        </div>
    </section>
    <!-- Banner section end -->
    <!-- About section start -->
    <section class="about">
        <div class="container-fluid">
            <div class="row align-items-center">

                <div class="col-lg-12">
                    <div class="content-box-fluid">
                        <span class="tagline">About @Model.Company_Name</span>
                        <h3>Valuation: @Model.Valuation$</h3>
                        <h5>Asking: @Model.Asking_Amount$ For @Model.Asking_Share% Of The Company.</h5>

                        <h4>Total Profit: @Model.Total_Profit$</h4>
                        <h6>Last Month Profit: @Model.Last_Month_profit$</h6>
                        <h6>Last Year Profit: @Model.Last_Year_Profit$</h6>
                        <br>
                        @if (Model.Offer_Share != null)
                        {
                            
                            <h4>Latest Offer</h4>
                            <h6>By: @Model.Status</h6>
                            <h6>Share: @Model.Offer_Share%</h6>
                            <h6>Amount: @Model.Offer_Amount$</h6>
                        }

                        @if (Model.In_Asp_Email == null)
                        {
                            <a href="@Url.Action("InConfirmDeal","InHome",new {Id = Model.Company_Name})" class="btn btn-success">Confirm Deal</a>
                            <button onclick="openofferForm()" class="btn btn-danger">Make An Offer</button>
                        }

                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- About section end -->
    <!-- Features section start -->
    <section class="features">
        <div class="container">
            <div class="row">
                <div class="col-md-7 m-auto text-center">
                    <div class="sec-heading">
                        <span class="tagline">Special Features</span>
                        <h3 class="sec-title">Why You Should Invest On @Model.Company_Name</h3>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-3 col-sm-6">
                    <div class="iconBox">
                        <span class="icon" style="background-color: #ffeee2;">
                            <i class="ti-pencil-alt"></i>
                        </span>
                        <a href="#">@Model.Feature1_Title</a>
                        <p>@Model.Feature1_Des</p>
                    </div>
                </div>
                <div class="col-lg-3 col-sm-6">
                    <div class="iconBox">
                        <span class="icon" style="background-color: #ebe3ff;">
                            <i class="ti-pencil-alt"></i>
                        </span>
                        <a href="#">@Model.Feature2_Title</a>
                        <p>@Model.Feature2_Des</p>
                    </div>
                </div>
                <div class="col-lg-3 col-sm-6">
                    <div class="iconBox">
                        <span class="icon" style="background-color: #d5f8ff;">
                            <i class="ti-pencil-alt"></i>
                        </span>
                        <a href="#">@Model.Feature3_Title</a>
                        <p>@Model.Feature3_Des</p>
                    </div>
                </div>
                <div class="col-lg-3 col-sm-6">
                    <div class="iconBox">
                        <span class="icon" style="background-color: #ffedf5;">
                            <i class="ti-pencil-alt"></i>
                        </span>
                        <a href="#">@Model.Feature4_Title</a>
                        <p>@Model.Feature4_Des</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <div class="chat-popup" id="offer">
        <form action="" class="chat-form-container" method="post">
            <h3>Give new offer</h3>

            <p name="ss" for="msg"><b>To CEO of @Model.Company_Name</b></p>
            <label>To:</label>
            <input type="text" name="En_Email"  class="form-control" readonly value="@Model.En_Post_Email"/>
            <label>Share(%):</label>
            <input type="text" name="Share" class="form-control">
            <label>Value(BDT):</label>
            <input type="text" name="Value" class="form-control">
            <label>Details:</label>
            <!-- <input type="text" name="details" class="offfermsg"> -->
            <textarea class="form-control" placeholder="Type message.." name="Details" required></textarea>
            <button type="submit" name="of_sub" class="btn btn-success">Send</button>
            <button type="button" class="btn cancel" onclick="closeofferForm()">Close</button>
        </form>
    </div>

    <div class="chat-popup" id="messaage">
        <form action="@Url.Action("InMessenger", "InHome")" class="chat-form-container" method="post">
            <h3>Message</h3>

            <label for="msg"><b>CEO of @Model.Company_Name</b></label>
            <input type="text" class="form-control" name="Receiver" readonly value="To: @Model.En_Post_Email" />
            <label>Message:</label>
            <textarea class="form-control" placeholder="Type message.." name="Message" required></textarea>

            <button type="submit" name="of_msg" class="btn">Send</button>
            <button type="button" class="btn cancel" onclick="closechatForm()">Close</button>
        </form>
    </div>

    <h3>@ViewBag.Message</h3>
    @Scripts.Render("~/Content/InValid.js")
</body>
</html>
